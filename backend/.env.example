# Personalized AI Travel Concierge - Environment Configuration

# === GEMINI AI CONFIGURATION ===
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# === GOOGLE CLOUD CONFIGURATION (Optional - for advanced voice features) ===
# Path to your Google Cloud service account JSON file
GOOGLE_CLOUD_CREDENTIALS_PATH=/path/to/your/service-account.json

# === DATABASE CONFIGURATION ===
DATABASE_URL=sqlite:///./travel_concierge.db

# === API CONFIGURATION ===
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# === CORS CONFIGURATION ===
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002"]

# === LOGGING CONFIGURATION ===
LOG_LEVEL=INFO
LOG_FILE=logs/travel_concierge.log

# === PERSONALIZATION SETTINGS ===
MAX_CONVERSATION_HISTORY=50
USER_PROFILE_CACHE_TTL=3600  # seconds
PERSONALIZATION_LEARNING_RATE=0.1

# === VOICE SYSTEM SETTINGS ===
VOICE_ENABLED=true
DEFAULT_VOICE_LANGUAGE=en-US
VOICE_PERSONALITY=friendly
MAX_AUDIO_DURATION=30  # seconds

# === SECURITY SETTINGS ===
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# === RATE LIMITING ===
RATE_LIMIT_PER_MINUTE=60
BURST_LIMIT=10

# === FEATURES FLAGS ===
ENABLE_VOICE_CHAT=true
ENABLE_IMAGE_SEARCH=true
ENABLE_BOOKING_SYSTEM=true
ENABLE_PERSONALIZATION=true
ENABLE_GEMINI_AI=true